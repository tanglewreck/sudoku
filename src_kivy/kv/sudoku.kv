<BoardButton>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0
        #Rectangle:
        #    pos: self.pos
        #    size: self.size
    canvas:
        Color:
            rgba: 1, 1 ,1 ,0
    background_color: 1, 1, 1, 1
