<SudokuBlock>: # inherits GridLayout
    canvas.before:
        Color:
            # rgba: 1, 1, 1, 1
            rgba: 0, 0, 0, 1
        Line:
            width: 4
            rectangle: self.x, self.y, self.width, self.height
        Rectangle:
            size: self.size
            pos: self.pos
    canvas:
        Color:
            rgba: 1, 1, 1, 1
    cols: 3
    rows: 3
    background_color: 1, 1, 1, 1
    # opacity: 0.85
    padding: 0
    spacing: 0


