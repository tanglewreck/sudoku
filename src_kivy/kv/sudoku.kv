                height: '30sp'
                font_size: '12sp'
                markup: True
                bold: False
                text: "Load game from file"
                # on_release: raise SystemExit(0)

        #
        # Quit button (and more...)
        #
        AnchorLayout:
            # cols: 1
            # rows: 1
            size_hint_y: 0.25
            # size_hint_x: 0.5
            anchor_x: 'right'
            anchor_y: 'bottom'
            GridLayout:
                # orientation: 'vertical' 
