                    # background_color: 0/255, 255/255, 0/255, 100/100
                    height: '30sp'
                    size_hint: 0.5, None
                    text: 'f00'
                    on_release: root.foo()
                # The quit button:
                NumberPadButton:
                    #canvas:
                    #    Color: 
                    #        rgba: 0/255, 0/255, 10/255, 20/100
                    #    Line:
                    #        width: 2
                    #        rectangle: self.x, self.y, self.width, self.height
                    # background_color: 255/255, 255/255, 0/255, 30/100
                    # opacity: 100/100
                    # padding: 10,10,10,10
                    padding: 0
                    # pos_hint: {'center_x': 100}
                    size_hint: 0.5, None
                    height: '30sp'
                    markup: True
                    bold: False
                    text: "[color=ff4040]Q[/color][sup][size=24][color=ffffff]u[/color][/size][/sup][sub][size=32][color=bbbb10]i[/color][/size][/sub][i][sup][size=36][color=ffff00]t[/color][/size][/i]"
                    # text: "Quit"
